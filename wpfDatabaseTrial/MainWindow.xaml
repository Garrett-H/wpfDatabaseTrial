        <TextBlock x:Name="View_Assets" HorizontalAlignment="Left" Margin="10,48,0,0" TextWrapping="Wrap" Text="Assets" VerticalAlignment="Top" Height="263" Width="220" />
        <TextBlock x:Name="View_Employees" HorizontalAlignment="Left" Margin="278,48,0,0" TextWrapping="Wrap" Text="Employees" VerticalAlignment="Top" Height="263" Width="230" />

    </Grid>
</Window>
